<html>
<head>
    <title>Data Table</title>
</head>
<body>
    <h1>Performance Data</h1>
    <table>
        <thead>
            <tr>
                {% for header in headers %}
                <th>{{ header }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for row in data %}
            <tr>
                <td>{{ row.id }}</td>
                <td>{{ row.name }}</td>
                <td>{{ row.email }}</td>
                <td>{{ row.department }}</td>
                <td>{{ row.salary }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>